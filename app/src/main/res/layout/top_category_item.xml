<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/category_item_padding"
        android:layout_marginLeft="@dimen/category_item_margin_l_r"
        android:layout_marginRight="@dimen/category_item_margin_l_r"
        android:layout_marginTop="@dimen/category_item_margin_top"
        android:layout_weight="1"
        android:background="@drawable/round_borders"
        android:padding="@dimen/category_item_padding"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/category_item_textsize" />
</LinearLayout>