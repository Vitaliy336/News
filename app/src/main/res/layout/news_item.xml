<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/newsImgView"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/post_item_margin"
                android:adjustViewBounds="true" android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/newsTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/newsImgView"
                android:layout_marginBottom="@dimen/post_text_margin_bottom"
                android:layout_marginLeft="@dimen/post_item_margin"
                android:layout_marginRight="@dimen/post_item_margin"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/post_title" />

            <TextView
                android:id="@+id/newsDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsTitleTV"
                android:layout_marginLeft="@dimen/post_item_margin"
                android:layout_marginRight="@dimen/post_item_margin"
                android:textSize="@dimen/post_description" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>