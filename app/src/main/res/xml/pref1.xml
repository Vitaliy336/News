<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Notifications">

        <SwitchPreference
            android:defaultValue="ture"
            android:key="switch_preference_1"
            android:summary="on/off"
            android:title="Notifications" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Hot News">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/countries"
            android:entryValues="@array/countries"
            android:key="list_preference_1"
            android:title="Countries" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Search news">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/sorted"
            android:entryValues="@array/sorted"
            android:key="list_preference_1"
            android:title="Order" />
    </PreferenceCategory>


</PreferenceScreen>